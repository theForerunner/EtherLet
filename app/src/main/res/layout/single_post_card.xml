<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/post_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="@string/display_test_string_post_title"
            android:textColor="@color/md_black_1000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_creator_and_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_title"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:text="@string/display_test_string_post_creator_and_time"
            android:textColor="@color/half_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_creator_and_time"
            android:maxLines="6"
            android:text="@string/display_test_string_post_content"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/post_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp">

            <!--LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:layout_marginStart="10dp">

                <com.sackcentury.shinebuttonlib.ShineButton
                    android:id="@+id/btn_favorite"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@color/half_black"
                    android:layout_gravity="center"
                    card_view:btn_color="@color/half_black"
                    card_view:btn_fill_color="@color/primary"
                    card_view:shine_animation_duration="0"
                    card_view:click_animation_duration="0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:text="@string/display_test_string_post_favored_count"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <com.sackcentury.shinebuttonlib.ShineButton
                    android:id="@+id/btn_comment"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@color/half_black"
                    android:layout_gravity="center"
                    card_view:btn_color="@color/half_black"
                    card_view:btn_fill_color="@color/primary"
                    card_view:shine_animation_duration="0"
                    card_view:click_animation_duration="0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:text="@string/display_test_string_post_comment_count"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <com.sackcentury.shinebuttonlib.ShineButton
                    android:id="@+id/btn_share"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@color/half_black"
                    android:layout_gravity="center"
                    card_view:btn_color="@color/half_black"
                    card_view:btn_fill_color="@color/primary"
                    card_view:shine_animation_duration="0"
                    card_view:click_animation_duration="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:text="@string/display_test_string_post_btn_share"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>