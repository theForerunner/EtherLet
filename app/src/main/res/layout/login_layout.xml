<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:icon="@android:drawable/ic_menu_save"
    tools:context=".view.LoginActivity"
    tools:layout_editor_absoluteY="25dp">

    <EditText
        android:id="@+id/id_text"
        android:layout_width="212dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:singleLine="true"
        android:textColor="@color/colorEditText"
        android:textSize="20dp"
        android:theme="@style/LoginUserControl"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="240dp" />

    <TextView
        android:id="@+id/textID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/delete_user"
        android:layout_alignStart="@+id/password_text"
        android:layout_marginStart="1dp"
        android:text="Account"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="213dp" />

    <EditText
        android:id="@+id/password_text"
        android:layout_width="212dp"
        android:layout_height="45dp"
        android:layout_below="@+id/id_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@color/colorEditText"
        android:textSize="20dp"
        android:theme="@style/LoginUserControl"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="302dp" />

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_text"
        android:layout_alignStart="@+id/password_text"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-2dp"
        android:text="Password"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="285dp" />

    <android.support.design.button.MaterialButton
        android:id="@+id/button_login"
        android:layout_width="212dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/textID"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="89dp"
        android:background="@color/colorPrimaryDark"
        android:text="LOGIN"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="413dp" />


    <android.support.design.button.MaterialButton
        android:id="@+id/button_register"
        android:layout_width="212dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:background="@color/colorPrimaryDark"
        android:text="REGISTER"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="468dp" />

    <TextView
        android:id="@+id/button_history"
        android:layout_width="27dp"
        android:layout_height="36dp"
        android:layout_alignTop="@+id/id_text"
        android:layout_toEndOf="@+id/id_text"
        android:gravity="center"
        android:text="â–¼"
        android:textColor="@color/colorText"
        tools:layout_editor_absoluteX="305dp"
        tools:layout_editor_absoluteY="240dp" />

    <CheckBox
        android:id="@+id/check_savePassword"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_below="@+id/password_text"
        android:layout_alignParentStart="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="3dp"
        android:text="Save Password"
        android:textColor="@color/colorText"
        android:theme="@style/LoginUserControl"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="364dp" />

    <ImageView
        android:id="@+id/imageTitle"
        android:layout_width="wrap_content"
        android:layout_height="202dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="31dp"
        android:src="@drawable/title2" />

    <ImageView
        android:id="@+id/delete_user"
        android:layout_width="25dp"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/id_text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="2dp"
        materialdesign:srcCompat="@drawable/baseline_clear_white_24"
        tools:layout_editor_absoluteX="265dp"
        tools:layout_editor_absoluteY="240dp" />


</RelativeLayout>