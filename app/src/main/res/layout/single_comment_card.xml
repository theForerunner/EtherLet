<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/post_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="0dp">

            <TextView
                android:id="@+id/post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="@string/display_test_string_post_title"
                android:textColor="@color/black_semi_transparent"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/post_creator_and_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/post_title"
                android:maxLines="5"
                android:paddingTop="3dp"
                android:paddingBottom="5dp"
                android:text="@string/display_test_string_post_creator_and_time"
                android:textColor="@color/half_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/post_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/post_creator_and_time"
                android:maxLines="6"
                android:text="@string/display_test_string_post_content"
                android:textSize="15sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <android.support.design.button.MaterialButton
                android:id="@+id/btn_comment"
                style="@android:style/Widget.Material.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:gravity="center"
                card_view:iconGravity="textStart"
                android:background="@color/white"
                android:text="@string/display_test_string_post_comment_count"
                android:textColor="@color/grey"
                android:textStyle="bold"
                card_view:backgroundTint="@color/white"
                card_view:icon="@drawable/baseline_comment_black_24"
                card_view:iconTint="@color/grey" />

            <android.support.design.button.MaterialButton
                android:id="@+id/btn_share"
                style="@android:style/Widget.Material.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:gravity="center"
                card_view:iconGravity="textStart"
                android:background="@color/white"
                android:text="@string/display_test_string_post_btn_share"
                android:textColor="@color/grey"
                android:textStyle="bold"
                card_view:backgroundTint="@color/white"
                card_view:icon="@drawable/baseline_share_black_24"
                card_view:iconTint="@color/grey" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>